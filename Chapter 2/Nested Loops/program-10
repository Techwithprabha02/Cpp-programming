//print  Floyd's Triangle pattern of numbers
#include <iostream>
using namespace std;

int main()
{
    int n;
    
    
    cout<<"enter the value of n"<<endl;
    cin>>n;
    int num=0;
    for(int i=1;i<=n;i++) {
    
       for (int j=1;j<=i;j++){
           
         cout<<num<<" ";
          
        num++;  
       }
        
       
       cout<<endl;
    }

    
     return 0;
}
